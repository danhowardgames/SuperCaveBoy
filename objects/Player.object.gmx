            <string>/// Collide with an enemy

var above_enemy = y &lt; other.y+vspd;
var falling = vspd &gt; 0;

if (above_enemy &amp;&amp; (falling || state == ledge_grab_state)){
    
    //code to prevent hitting 2 enemies at once
    //as soon as you hit enemy, move up (if not obstructed)
    //to avoid hitting the second enemy at the same time
    if(!place_meeting(x,yprevious,Solid)){
        y = yprevious;
    }
    //move immediately back to exactly above the enemy
    // so that it looks natural
    while(!place_meeting(x,y+1,other)){
        y++
    }
    
    ///kill the enemy
    
    with (other){
        instance_destroy();
    }
    
    //Bounce off enememy
    vspd = -(jspd/2);
    
} else {
    ///take damage
    if (state != hurt_state){
        image_blend = make_colour_rgb(220,150,150);
        vspd = -12;
        hspd = (sign(x-other.x)*10);
        
        state = hurt_state;
        
        direction_move_bounce(Solid);
        
        if (instance_exists(PlayerStats)){
            PlayerStats.hp -=1;
        }
        
    }
    
}
</string>
